---
interface Props {
  name: string;
  rate: string;
  price: string;
  popular: Boolean;
  votes: number;
  available: Boolean;
  image: string;
}

const { name, rate, price, popular, votes, available, image } = Astro.props;
---

<article class="card">
  <div class="image">
    {popular && <span class="badge">Popular</span>}
    <img src={image} alt="" />
  </div>
  <div class="features">
    <div class="info">
      <span class="coffee-name">{name}</span>
      <span class="coffee-price">{price}</span>
    </div>
    <div class="rating">
      <span class="rate"
        >{
          votes == 0 ? (
            <span class="rate-s">
              <img src="/Star.svg" alt="start" />{" "}
              <span class="rate-v">No rating</span>
            </span>
          ) : (
            <span class="rate-s">
              <img src="/Star_fill.svg" alt="star" /> {rate}
              <span class="rate-v">{`(${votes} votes)`}</span>
            </span>
          )
        }</span
      >
      <span class="available">{!available ? "Sold out" : ""}</span>
    </div>
  </div>
</article>

<style>
  .image {
    position: relative;
  }

  .image img {
    border-radius: 10px;
    margin-bottom: 10px;
    object-fit: cover;
  }

  .image .badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #f6c768;
    font-weight: 500;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 12px;
  }

  .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .info .coffee-name {
    font-weight: 500;
    color: var(--text-color);
    font-size: 18px;
  }

  .info .coffee-price {
    background: #bee3cc;
    color: #000;
    padding: 4px 4px;
    border-radius: 5px;
    font-weight: bold;
  }

  .rating {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
  }

  .rating .rate .rate-s {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--text-color);
    font-weight: 500;
  }

  .rating .rate .rate-s img {
    margin-right: 5px;
  }

  .rating .rate .rate-s .rate-v {
    color: #6f757c;
    font-weight: bold;
    margin-left: 5px;
  }

  .available {
    color: #ed735d;
    font-weight: bold;
  }
</style>
